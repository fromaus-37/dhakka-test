{
  "name": "dhakka",
  "version": "0.0.0-autogenerated-semantic-release",
  "description": "Dhakka ('push start' in Urdu/Hindi) is a command line utility for creating a React application with a webpack-based setup that is minimal, transparent and customisable",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test-ci:unit": "jest tests/unitTests/* --coverage --ci --reporters=\"jest-junit\" && mv coverage/coverage-final.json  coverage/coverage-final-unit.json",
    "test-ci:integration": "jest tests/integrationTests/* --coverage --ci --reporters=\"jest-junit\" && mv coverage/coverage-final.json  coverage/coverage-final-integration.json",
    "report-coverage-ci": "nyc report -t coverage --report-dir coverage --reporter=cobertura",
    "lint:js": "eslint .",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "format-staged": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bin": {
    "dhakka": "./dhakka"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@commitlint/prompt": "17.4.2",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/exec": "6.0.3",
    "commitizen": "4.3.0",
    "debugger-is-attached": "1.2.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.1",
    "gitignore": "0.7.0",
    "husky": "8.0.1",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "dependencies": {
    "commander": "9.4.1",
    "uuid": "9.0.0"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": "coverage/.",
    "outputName": "junit.xml"
  }
}

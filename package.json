{
  "name": "dhakka",
  "version": "1.0.3",
  "description": "Dhakka ('push start' in Urdu/Hindi) is a command line utility for creating a React application with a webpack-based setup that is minimal, transparent and customisable",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test-ci:unit": "jest tests/unitTests/* --coverage --ci --reporters=\"jest-junit\"",
    "test-ci:integration": "jest tests/integrationTests/* --coverage --ci --reporters=\"jest-junit\"",
    "test-ci": "jest --coverage --ci --reporters=\"jest-junit\"",
    "lint:js": "eslint .",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bin": {
    "dhakka": "./dhakka"
  },
  "devDependencies": {
    "debugger-is-attached": "1.2.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.1",
    "gitignore": "0.7.0",
    "husky": "8.0.1",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "nyc": "15.1.0",
    "prettier": "2.7.1"
  },
  "dependencies": {
    "commander": "9.4.1",
    "uuid": "9.0.0"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": "coverage/.",
    "outputName": "junit.xml"
  }
}
